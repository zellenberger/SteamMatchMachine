@using Steam_Match_Machine.Models;
@model VideoGameViewModel
<h2>Add Video Game</h2>

<div class="form-horizontal">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label class= "formLabel" asp-for="VideoGame.steam_appid">Steam's Video Game Id</label>
            <input asp-for="VideoGame.steam_appid" class="form-control" />
            <span asp-validation-for="VideoGame.steam_appid"></span>
        </div>
        <p>
            <button type="submit" class="btn btn-primary" role="button">Add</button>
        </p>
    </form>
</div>